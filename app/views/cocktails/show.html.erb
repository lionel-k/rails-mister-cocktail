<div class="banner cocktail-banner">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h2>Ingredients</h2>
      <ul>
        <% doses = @cocktail.doses %>
        <% doses.each do |dose| %>
          <li><%= dose.ingredient.name %> -
            <%= dose.description %>
            <%= link_to dose_path(dose), method: :delete do %>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %>
          </li>
        <% end %>
      </ul>

    </div>
    <div class="col-xs-6">
      <h3>Add an ingredient</h3>
      <%= render 'doses/form_dose' %>
    </div>
  </div>
</div>



